<script>
    // Get the modal // Common
    var modal2 = document.getElementById('myModal2');
    var modalImg2 = document.getElementById("img01");
    var captionText2 = document.getElementById("caption");

    function  fullerimage(value, data) {
        var image = value;
        var src = "/images/fulls/" + image + ".jpg";
        var alt = data;
        modal2.style.display = "block";
        modalImg2.src = src;
        captionText2.innerHTML = alt;
    }

    // Get the <span> element that closes the modal
    var span2 = document.getElementsByClassName("close")[0];

    // When the user clicks on <span> (x), close the modal
    span2.onclick = function() {
        modal2.style.display = "none";
    }

</script>

<script>

    function getmodal() {
        document.getElementById('sharemodal').style.display = "block";
    }

    function getmainbody() {
        document.getElementById('sharemodal').style.display = "none";
    }

    function getgmailbody()
    {
        window.open('http://www.gmail.com');
        document.getElementById('sharemodal').style.display = "none";
    }

</script>

<script>

    var btn = document.getElementById("myPopup");
    var modal = document.getElementById('myModal1');

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("std-close")[0];


    btn.onclick = function() {
        modal.style.display = "block";
    }


    // When the user clicks on <span> (x), close the modal
    span.onclick = function() {
        modal.style.display = "none";
        document.getElementById("headingdiv").style.display = 'block';
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>

